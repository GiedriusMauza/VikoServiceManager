@model IEnumerable<ApplicationUser>
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Membership List</h2>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Email
                </th>
                <th>
                    Name
                </th>
                <th>
                    Role
                </th>
                <th>
                    Resident Group
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                if (@item.Role == "User")
                {
                    <tr>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Role
                        </td>
                        <td>
                            @item.ResidentGroupName
                        </td>
                        <td>
                            <div class="text-center">
                                <form asp-action="AssignResidentGroup" asp-route-userId="@item.Id">
                                    <a asp-action="AssignResidentGroup" asp-route-userId="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                        Assign Resident Group
                                    </a>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </table>
    }
</div>