@model ServiceViewModel

@{
    var title = "Create Service";
}

<form method="post">
    <input asp-for="@Model.Id" hidden />
    @if (Model != null && !String.IsNullOrEmpty(Convert.ToString(Model.Id)))
    {
        title = "Edit Service";
    }

    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" readonly class="form-control"></input>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="ServiceName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ServiceName" class="form-control"></input>
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control"></input>
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (Model != null && !String.IsNullOrEmpty(Convert.ToString(Model.Id)))
                            {
                            //update
                                <input type="submit" class="btn btn-primary w-100" value="Update" />
                            }
                            else
                            {
                                // create
                                <input type="submit" class="btn btn-primary w-100" value="Create" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>