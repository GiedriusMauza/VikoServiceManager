@model ServiceViewModel

@{
    var title = "Assign Manager";
}

<form method="post">
    <input asp-for="@Model.Id" hidden />
    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" readonly class="form-control"></input>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="ManagerSelected">Manager Name</label>
                    </div> 
                    <div class="col-8">
                        <select asp-for="ManagerSelected" asp-items="@Model.ManagerList" class="form-control">
                            <option selected disabled>--Select Manager</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-6 row ">
                        <div class="col-md-10 align-content-center">
                            <input type="submit" class="btn btn-primary w-10" value="Update Manager" />
                            <a asp-action="Index" class="btn btn-success w-10">Back</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
</form>