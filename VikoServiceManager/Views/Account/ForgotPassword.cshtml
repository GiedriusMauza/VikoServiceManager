@model ForgotPasswordViewModel

<h1 class="text-info">Forgot your Password?</h1>
<div>
    <div class="col-md-8">
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
            <h4>Enter your Email.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger">
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2"></label>
                    <div class="col-md-10">
                        <input class="form-control" asp-for="Email"></input>
                        <span asp-validation-for="Email" class="text-danger"> </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success form-control">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}