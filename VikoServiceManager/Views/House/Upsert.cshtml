@model HouseViewModel

@{
    var title = "Create House Entry";
}

<form method="post">

    @if (Model != null && Model.Id != 0)
    {
        title = "Edit House Entry";
        <input asp-for="@Model.Id" hidden />
    }

    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" readonly class="form-control"></input>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" class="form-control"></input>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" class="form-control"></input>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Region"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Region" class="form-control"></input>
                        <span asp-validation-for="Region" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="PostalCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PostalCode" class="form-control"></input>
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="ResidentGroupSelected">Resident Group</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="ResidentGroupSelected" asp-items="@Model.ResidentGroupList" class="form-control">
                            <option selected disabled>--Select Resident Group</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="ServiceSelected">Service</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="ServiceSelected" asp-items="@Model.ServiceSelectedList" class="form-control">
                            <option selected disabled>--Select Service</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (!(Model.Id == 0))
                            {
                                //update
                                <input type="submit" class="btn btn-primary w-100" value="Update" />
                            }
                            else
                            {
                                // create
                                <input type="submit" class="btn btn-primary w-100" value="Create" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>