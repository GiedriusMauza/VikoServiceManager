@model House

@{
    var title = "Create House Entry";
}

<form method="post">
    <input asp-for="@Model.Id" hidden />
    @if (Model != null && !String.IsNullOrEmpty(Convert.ToString(Model.Id)))
    {
        title = "Edit House Entry";
    }

    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" readonly class="form-control"></input>
                    </div>

                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" class="form-control"></input>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" class="form-control"></input>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Region"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Region" class="form-control"></input>
                        <span asp-validation-for="Region" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="PostalCode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PostalCode" class="form-control"></input>
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>


                    <div class="form-group row py-2">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                @if (Model != null && !String.IsNullOrEmpty(Convert.ToString(Model.Id)))
                                {
                                //update
                                    <input type="submit" class="btn btn-primary w-100" value="Update" />
                                }
                                else
                                {
                                    // create
                                    <input type="submit" class="btn btn-primary w-100" value="Create" />
                                }
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-100">Back</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
</form>