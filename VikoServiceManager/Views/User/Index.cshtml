@model IEnumerable<ApplicationUser>
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User List</h2>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Email
                </th>
                <th>
                    Name
                </th>
                <th>
                    Role
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.Email
                    </th>
                    <th>
                        @item.Name
                    </th>
                    <th>
                        @item.Role
                    </th>
                    <th>

                    </th>
                </tr>
            }
        </table>
    }
</div>